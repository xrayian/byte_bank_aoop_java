<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="536.0" prefWidth="985.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kernelcrash.byte_bank.controllers.dashboard.DashboardTransactionsController">
   <children>
      <VBox prefHeight="536.0" prefWidth="986.0" spacing="10.0" stylesheets="@../../css/transactions.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <children>
              <!-- Header -->
              <Label alignment="BOTTOM_CENTER" prefHeight="58.0" prefWidth="202.0" styleClass="header-title" stylesheets="@../../css/styles.css" text="Transaction History">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
      
              <!-- Table -->
              <TableView fx:id="transactionsTable" prefWidth="600" style="-fx-border-radius: 8; -fx-background-radius: 6;" styleClass="transaction-table" VBox.vgrow="ALWAYS">
                  <columns>
                      <TableColumn fx:id="iconColumn" prefWidth="50" resizable="false" />
                      <TableColumn fx:id="nameColumn" prefWidth="150" text="Name" />
                      <TableColumn fx:id="typeColumn" prefWidth="100" text="Type" />
                      <TableColumn fx:id="currencyColumn" prefWidth="100" text="Currency" />
                      <TableColumn fx:id="amountColumn" prefWidth="100" text="Amount" />
                      <TableColumn fx:id="dateTimeColumn" prefWidth="150" text="Date/Time" />
                  </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </VBox.margin>
              </TableView>
          </children>
      </VBox>
   </children>
</AnchorPane>
