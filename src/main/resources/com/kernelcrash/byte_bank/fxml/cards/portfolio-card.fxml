            <Insets bottom="4.0" top="4.0" />
         </HBox.margin>
      </VBox>
        <VBox alignment="CENTER_LEFT" prefHeight="83.0" prefWidth="273.0" spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
                <Label prefHeight="38.0" prefWidth="263.0" styleClass="portfolio-title" stylesheets="@../../css/styles.css" text="Total Portfolio Value" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="Inter Regular" size="16.0" />
                    </font>
                </Label>
                <Label alignment="BOTTOM_RIGHT" prefHeight="30.0" prefWidth="300.0" styleClass="portfolio-value" text="25,678.23" textAlignment="CENTER" VBox.vgrow="ALWAYS">
